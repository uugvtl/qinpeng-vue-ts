{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module"    : "esnext",
    "target"    : "es5",
    "strict"    : true,
    "allowJs"   : true,
    "sourceMap" : true,
    "pretty"    : true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "lib": [
      "dom",
      "es2017"
    ]

  }
}
